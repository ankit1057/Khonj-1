<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f3"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imghexagon"
                android:layout_width="140dp"
                android:layout_height="212dp"
                android:layout_gravity="right"
                android:src="@drawable/hexagone1"
                android:tint="#3399ff" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/hexagone2"
                android:tint="#3399ff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="36dp"
                android:layout_marginBottom="90dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="125dp">


                <com.khonj.customfonts.MyTextView_Poppins_SemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="LOGIN"
                    android:textColor="#fefefe"
                    android:textSize="31.3sp" />

                <com.khonj.customfonts.MyTextView_Poppins_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="52.7dp"
                    android:text="Phone"
                    android:textColor="#fefefe"
                    android:textSize="13.3sp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/transparent"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textCursorDrawable="@drawable/white_cursor_color"
                    android:textSize="15sp" />

                <View
                    android:layout_width="263.7dp"
                    android:layout_height="1dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="6.3dp"
                    android:background="#f2f2f3" />


                <TextView
                    android:id="@+id/otp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="37.3dp"
                    android:text="OTP"
                    android:visibility="invisible"
                    android:textColor="#fefefe"
                    android:textSize="13.3sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">


                    <!-- <com.khonj.customfonts.EditText_Poppins_Semi_Bold
                         android:id="@+id/edtpass"
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:textSize="15sp"
                         android:textColorHint="#ffffff"
                         android:maxLength="10"
                         android:textCursorDrawable="@drawable/white_cursor_color"
                         android:maxLines="1"
                         android:textColor="#FFFFFF"
                         android:inputType="textPassword"
                         android:background="@android:color/transparent"
                         />-->

                    <EditText
                        android:id="@+id/otp"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/white_cursor_color"
                        android:textSize="15sp"
                        />
                      <!--  android:drawable_hide="@drawable/hide1"
                        android:drawable_show="@drawable/show"
                        android:tint_color="#FFFFFF"-->


                </LinearLayout>

                <View
                    android:visibility="invisible"
                    android:id="@+id/view"
                    android:layout_width="263.7dp"
                    android:layout_height="1dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="6.3dp"
                    android:background="#f2f2f3" />


                <TextView
                    android:id="@+id/resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="17.3dp"
                    android:text="Resend Verification Code?"
                    android:visibility="invisible"
                    android:textColor="#f2f2f3"
                    android:textSize="12.3sp" />


            </LinearLayout>

            <FrameLayout
                android:id="@+id/send"
                android:layout_width="40.7dp"
                android:layout_height="45.3dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="27.3dp"
                android:layout_marginBottom="43.7dp"
                android:background="@drawable/white_hexagone">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:src="@drawable/right_arrow" />


            </FrameLayout>


        </FrameLayout>


    </LinearLayout>


</LinearLayout>